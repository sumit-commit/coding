/*
TC - O(n)
SC - O(1)

taking first element of array in some temporary variable temp, 
now shift each element one index back,
at the end put the first element taken in temp variable at the last index of array.
*/

void rotate(vector<int> &arr)
{
    int temp = arr[0];
    for(int i=0 ; i<arr.size()-1 ; i++)
        arr[i] = arr[i+1];
    arr[arr.size()-1] = temp;
}
